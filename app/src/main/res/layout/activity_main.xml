<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="btnYuzdeTik"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/sayiGoster"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="80dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textSize="34sp" />

    <TableLayout
        android:layout_width="405dp"
        android:layout_height="match_parent"
        android:onClick="btnSayiTik"
        android:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"

                android:onClick="btnSilTik"
                android:text="AC"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnArtiEksi"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:onClick="btnSayiTik"
                android:text="+/-"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnYuzde"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:onClick="btnYuzdeTik"
                android:text="%"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnBolme"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:onClick="btnOptik"
                android:text="/"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:onClick="btnSayiTik"
                android:text="7"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnSayiTik"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnSayiTik"
                android:text="9"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnCarpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnOptik"
                android:text="X"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:onClick="btnSayiTik"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnSayiTik"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnSayiTik"
                android:text="6"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnEksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnOptik"
                android:text="-"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:onClick="btnSayiTik"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnSayiTik"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnSayiTik"
                android:text="3"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnArti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnOptik"
                android:text="+"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:onClick="btnSayiTik"
                android:text="0"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnVirgul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnSayiTik"
                android:textSize="34sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnNokta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnSayiTik"
                android:text="."
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnEsittir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="btnEsittirTik"
                android:text="="
                android:textSize="34sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>